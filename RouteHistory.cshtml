@model IEnumerable<AIEmergencyNavigation.Models.RouteHistory>
@{
    ViewData["Title"] = "Route History";
}

<h2 class="text-center mb-4">📍 Route History (Admin)</h2>

<div class="row row-cols-1 row-cols-md-2 g-4">
    @foreach (var item in Model)
    {
        <div class="col">
            <div class="card shadow border-0 h-100">
                <div class="row g-0">
                    <div class="col-md-4 d-flex align-items-center justify-content-center bg-light">
                        <img src="~/images/emergency-icon.png" class="img-fluid p-2" style="max-height:100px;" alt="Emergency Icon">
                    </div>
                    <div class="col-md-8">
                        <div class="card-body">
                            <h5 class="card-title text-danger fw-bold">@item.EmergencyType</h5>
                            <p class="card-text"><strong>📍 Location:</strong> @item.CurrentLocation</p>
                            <p class="card-text"><strong>🛣️ Route:</strong> @item.SuggestedRoute</p>
                            <p class="card-text text-muted"><small>🕒 @item.SuggestedAt.ToString("f")</small></p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</div>
